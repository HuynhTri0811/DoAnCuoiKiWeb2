<% if(filmAll) { %>
    <div id="table">
    <table>
        <tr>
            <th>STT </th>
            <th>Tên phim </th>
            <th>Ảnh phim </th>
            <th>Ngày công chiếu</th>
            <th>Số lượt bấm vào phim trên trang web </th>
            <th>Thao tác</th>
        </tr>
            <% for (let i=0;i < filmAll.length ; i++ ) { %>
                <tr>
                    <td> <%= filmAll[i].dataValues.film_ID  %></td>
                    <td> <%= filmAll[i].dataValues.film_Name %></td>
                    <td>
                        <img src="<%= filmAll[i].dataValues.film_Image %>" alt="no load image"/>
                    </td>
                    <td> 
                            <% var d = new Date(filmAll[i].dataValues.film_DatePublic); %>
                            <%= d.getDate(); %>
                            /
                            <%= d.getMonth()+1; %>
                            /
                            <%= d.getFullYear(); %>
                    </td>
                    <td> <%= filmAll[i].dataValues.film_ViewCount %></td>
                    <td><a href="/admin/update/film/<%= filmAll[i].dataValues.film_ID %>">Cập nhật</a> &nbsp;
                    <a href="/admin/delete/film/<%= filmAll[i].dataValues.film_ID %>" onclick="return confirmAction()" >Xóa </a></td>
                </tr>
            <% } %>
    </table>
        <button style="width:auto" id="block_from_create_film">
            Thêm phim 
        </button>
    </div>
    <div id="create_film">
    <form action="/admin/create/cineplex/" method="POST">
        <label>Tên phim :</label>
        <input type="text" placeholder="Nhap vao ten phim " id="film_Name" name="film_Name" required/><br/>
        <label>Ảnh film :</label>
        <input type="file" id="film_Image" name="film_Image" required/><br/>
        <label>Ngày công chiếu :</label>
        <input type="date" name="film_DatePublic" id="film_DatePublic" required/><br/>
        <label>Thời lượng :</label>
        <input type="number" id="film_Time" name="film_Time" required><br/>
        <button type="submit" value="Thêm vào Film">
            Thêm vào film
        </buton>
    </form>
    </div>
<% } %>